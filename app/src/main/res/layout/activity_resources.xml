<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/r2_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/others">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tv_error"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/previous"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:text="@string/next"
            android:visibility="gone"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/disc"
            android:text="*Contact details shown above are maintained by SAC, XLRI."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/touch"
            android:layout_marginTop="0dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/touch"
            android:text="Touch on the contact to call."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_contact_number"
            android:layout_marginTop="0dp"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>
    </RelativeLayout>


</layout>